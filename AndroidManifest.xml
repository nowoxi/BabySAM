<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.androidproject.babysam"
      android:versionName="2.0" android:versionCode="2">
    <uses-sdk android:minSdkVersion="7" />
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

    <application android:label="@string/app_name" android:icon="@drawable/babysam_icon" android:debuggable="true">
        <activity android:name=".SplashActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="EventActivity" android:configChanges="keyboardHidden|orientation"></activity>
        <activity android:name="babysamActivity"></activity>
        <activity android:name="FaceActivity"></activity>
        <activity android:name="Facerec_displayActivity"></activity>
        <activity android:name="HelpActivity"></activity>
        <activity android:name="LoginActivity"></activity>
        <activity android:name="MenuActivity"></activity>
        <activity android:name="Old_displayActivity"></activity>
        <activity android:name="OldActivity"></activity>
        <activity android:name="settingsActivity"></activity>
        <activity android:name="olistActivity" android:configChanges="keyboardHidden|orientation"></activity>
        <activity android:name="slistActivity" android:configChanges="keyboardHidden|orientation"></activity>
    </application>
</manifest>